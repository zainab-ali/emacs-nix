(require 'use-package)

(use-package flyspell
  :commands (flyspell-mode))

(use-package pollen-markup-mode
  :mode "\\.pm\\'"
  :config
  ;; This variable is used in the yas tag snippet. It must be defined before the
  ;; snippet is loaded
  (setq pollen-markup-tags nil)
  :hook
  ((pollen-markup-mode . flyspell-mode)
   (pollen-markup-mode . code-mode)
   (pollen-markup-mode . auto-fill-mode)
   ;; Show paren mode is a global minor mode, so this enables it for /all/ modes
   ;; not just pollen. There's no easy way to make this local.
   (pollen-markup-mode . show-paren-mode)
   (pollen-markup-mode . electric-quote-local-mode)
   (pollen-markup-mode . yas-minor-mode)))

;; Nano-emacs
(use-package nano
  :config
  (add-to-list 'default-frame-alist '(font . "Roboto Mono:style=Light:size=30")))

(use-package project+
  :after ivy
  :bind-keymap
  ("C-c p" . project+-command-map))

(use-package dashboard)

(use-package light)
(use-package mill)

(use-package fandango)

(use-package coe-code
  :config
  (fandango coe-code-read-desc-mode
	    :prefix coe-code-read-desc
	    :normal
            ("<up>" . -backward)
            ("k" . -backward)
            ("<down>" . -forward)
            ("j" . -forward)
            ("E" . -edit)
            ("S" . -save))
  ;; TODO : This is necessary for the above keybindings to take effect. Why?
  (add-hook 'coe-code-read-desc-mode-hook
            (lambda ()
              (call-interactively 'evil-local-mode)
              (call-interactively 'evil-local-mode))))



(use-package cartography)

(use-package subed
  :config
  (add-hook 'subed-mode-hook 'code-mode))

(provide 'site-packages)
